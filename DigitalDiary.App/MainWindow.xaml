<Window x:Class="DigitalDiary.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalDiary.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="349" Width="580">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <TextBox  Text="{Binding Login}" HorizontalAlignment="Left" Margin="170,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" FontSize="16" FontWeight="Bold"/>
        <Label Content="Логин" HorizontalAlignment="Left" Margin="35,75,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <TextBox Text="{Binding Password}" HorizontalAlignment="Left" Margin="170,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="256" FontSize="16" FontWeight="Bold"/>
        <Label Content="Пароль" HorizontalAlignment="Left" Margin="35,125,0,0" VerticalAlignment="Top" FontSize="18" FontWeight="Bold"/>
        <Button Command="{Binding Auth}" Content="Вход" HorizontalAlignment="Left" Margin="86,246,0,0" VerticalAlignment="Top" Height="39" Width="130"/>
        <Button Click="Button_Click" Content="Регистрация" HorizontalAlignment="Left" Margin="386,246,0,0" VerticalAlignment="Top" Height="39" Width="130"/>

    </Grid>
</Window>
