<Page x:Class="DigitalDiary.App.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DigitalDiary.App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">
    <Page.Resources>
        <DataTemplate x:Key="HomeWorkKey">
            <Border Width="160" Height="100" Margin="20 20 20 20" >
                <StackPanel >
                    <TextBlock  Text="{Binding Path=Date}" FontSize="18" TextAlignment="Center" />
                    <TextBlock Margin="0 10 0 0 " Text="{Binding Path=About}" FontSize="14" TextAlignment="Center" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        
        <ListBox ItemsSource="{Binding HomeWorks}" ItemTemplate="{StaticResource HomeWorkKey}" Background="{x:Null}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel>
                        
                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>
        
    </Grid>
</Page>
